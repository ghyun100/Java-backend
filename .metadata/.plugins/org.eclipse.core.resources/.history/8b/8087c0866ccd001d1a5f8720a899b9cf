package sign;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;



//회원가입


public class SignUp {

	private String email;
	private String password;
	private String passwordCheck;
	private String name;
	private String phoneNumber;
	
	public SignUp() {}
	
	
	public SignUp(String email, String password, String passwordCheck, String name, String phoneNumber) {
		this.email = email;
		this.password = password;
		this.passwordCheck = passwordCheck;
		this.name = name;
		this.phoneNumber = phoneNumber;
	}


	public String getEmail() {
		return email;
	}


	public void setEmail(String email) {
		this.email = email;
	}


	public String getPassword() {
		return password;
	}


	public void setPassword(String password) {
		this.password = password;
	}


	public String getPasswordCheck() {
		return passwordCheck;
	}


	public void setPasswordCheck(String passwordCheck) {
		this.passwordCheck = passwordCheck;
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public String getPhoneNumber() {
		return phoneNumber;
	}


	public void setPhoneNumber(String phoneNumber) {
		this.phoneNumber = phoneNumber;
	}

	

	@Override
	public String toString() {
		return "SignUp [email=" + email + ", password=" + password + ", passwordCheck=" + passwordCheck + ", name="
				+ name + ", phoneNumber=" + phoneNumber + "]";
	}

	

	public static void equalEmail() {
		
	}
	
	
	
	
	public static void main(String[] args) {

		
		List<SignUp> save = new ArrayList<>();
		while(true) {
		
		Scanner scanner = new Scanner(System.in);
		
		SignUp signUp = new SignUp();
			
		System.out.println("이메일: ");
		signUp.email = scanner.nextLine();
		System.out.println("비밀번호: ");
		signUp.password = scanner.nextLine();
		System.out.println("비밀번호 확인: ");
		signUp.passwordCheck = scanner.nextLine();
		System.out.println("이름: ");
		signUp.name = scanner.nextLine();
		System.out.println("전화번호: ");
		signUp.phoneNumber = scanner.nextLine();
		
		
		//모두 입력
		if(signUp.email.isBlank() || 
				signUp.password.isBlank() ||
				signUp.passwordCheck.isBlank() || 
				signUp.name.isBlank() || 
				signUp.phoneNumber.isBlank()) {
			System.out.println("모두 입력하세요");
			
		}
		
		// 비밀번호 일치
		if(!signUp.password.equals(signUp.passwordCheck)) {
			System.out.println("비밀번호가 일치하지 않습니다.");
			}
		
		save.add(signUp);
		
		// 이메일 중복
		for(SignUp userList1 : save) {
			if(userList1.getEmail().equals(signUp.email)) {
				System.out.println("이메일 중복");
			}
		}
		
		
		for(SignUp userList : save) {
			System.out.println(userList);
			}
		}
			
		
	
			
		
	}
		
}


